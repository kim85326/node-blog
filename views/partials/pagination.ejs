<nav class="my-5" aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        <li
            class="page-item <% if(!pagination.hasPreviousPage) { %> disabled <% } %>"
        >
            <a
                class="page-link"
                href="/?page=<%- parseInt(pagination.currentPage) - 1 %>"
                tabindex="-1"
            >
                Previous
            </a>
        </li>
        <% for (var i = 1; i < pagination.totalPages + 1; i++) { %>
        <li
            class="page-item <% if(i == pagination.currentPage) { %> active <% } %>"
        >
            <a class="page-link" href="/?page=<%- i %>">
                <%- i %>
            </a>
        </li>
        <% } %>
        <li
            class="page-item <% if(!pagination.hasNextPage) { %> disabled <% } %>"
        >
            <a
                class="page-link"
                href="/?page=<%-  parseInt(pagination.currentPage) + 1 %>"
            >
                Next
            </a>
        </li>
    </ul>
</nav>
